import com.fbfs.pc.au.model.declarativemodel.DM_AutomatedUnderwritingUser;

rule "Impl__WorkItem Pend Reason Proof of Prior"
	agenda-group "IT_WorkItem"
	dialect "mvel"
	when
		policy : Policy( )
		(finalize : Finalize( proofOfPriorAuto == true || proofOfPriorProperty == true ) from policy.finalization)
		DM_AutomatedUnderwritingUser( )
	then
		WorkItemPendReason fact0 = new WorkItemPendReason();
		fact0.setType( "Policy" );
		fact0.setPendReason( "PMP_PROOF_PRIOR" );
		insertLogical( fact0 );
end
